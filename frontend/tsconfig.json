{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "types": [],

    "rootDir": "./src/scripts/",
    "outDir": "../src/static/scripts/",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  },
  "include": ["./src/scripts/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
